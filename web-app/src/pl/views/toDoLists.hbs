<h1 id="blogzo">Todo list</h1>

<div class="page-content page-container" id="page-content">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card px-3">
                <div class="card-body">
                    <h4 class="card-title">Your Todo list</h4>
                    <form action="/toDoLists" method="POST">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <div class="add-items d-flex"> <input type="text" class="form-control todo-list-input"
                                name="todo" placeholder="What do you need to do today? (5-20)">
                            <button class="add btn btn-primary font-weight-bold todo-list-add-btn">Add</button>
                        </div>
                    </form>
                    {{#if model.toDos.length}}
                        {{#each model.toDos}}
                            <div class="list-wrapper">
                                <ul class="d-flex flex-column-reverse todo-list">
                                    <li>
                                        <div class="form-check"> <label class="form-check-label"> <input class="checkbox"
                                                    type="checkbox"> <b>{{dataValues.toDo}}</b> <i class="input-helper"></i></label> </div>
                                        <i class="remove mdi mdi-close-circle-outline"></i>
                                    </li>
                                </ul>
                            </div>
                        {{/each}}
                    {{/if}}
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        {{#if model.errors.length}}
                            {{#each errors}}
                                <li>{{this}}</li>
                            {{/each}}
                        {{/if}}
                    </h5>
                        <div class="list-wrapper">
                            <ul class="d-flex flex-column-reverse todo-list">
                                {{#if toDos.length}}
                                    {{#each toDos.Completed}}
                                        <li>
                                            <div class="form-check"> <label class="form-check-label"> <input class="checkbox"type="checkbox"> <b>{{Completed}}</b> 
                                                <i class="input-helper"></i></label> 
                                            </div>
                                            <i class="remove mdi mdi-close-circle-outline"></i>
                                        </li>
                                    {{/each}}
                                {{/if}}
                            </ul>
                        </div>
                </div>
            </div>
        </div>
    </div>