<h1 id="blogzo" class="p-1"><b>BLOGZO</b></h1>

<div class="container-lg col-md-3">
    {{#if isLoggedIn}}
        <a href="/blogposts" class="m-3 btn btn-light btn-lg col align-self-center">Blogposts</a>
        <form action="/logout" method="POST">
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            
            <input class="m-3 btn btn-light btn-lg col align-self-center" type="submit" value="Logout">
        </form> 
        {{else}}
            <a href="/login" class="m-3 btn btn-light btn-lg col align-self-center">Login</a>
            <a href="/create-account" class="m-3 btn btn-light btn-lg col align-self-center">Sign up</a>
            <a href="/blogposts" class="m-3 btn btn-light btn-lg col align-self-center">Continue as guest</a>
    {{/if}}  
</div><br>

