                                    <textarea name="content" id="content" cols="83" rows="3"></textarea>
                                </div>
                            </div>

                             <div class="form-group row">
                                <label for="postTitle" value="{{posted}} "class="col-md-4 col-form-label text-md-right">Title</label>
                                <div class="col-md-6">
                                    <input type="date" id="posted" value="{{posted}}" class="form-control" name="posted" required autofocus>
                                </div>
                            </div>
                        
                            <div class="col-md-6 offset-md-4 p-1">
                                <input type="file" value="{{imgFile}} "id="file">
                                </button>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <input type="submit" id="submit" value="Create" class="btn btn-primary">
                                </button>
                            </div>
                        </form>
                    </div>    
                </div>
            </div>
        </div>
    </div>
