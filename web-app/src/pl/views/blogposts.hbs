<h1 id="blogzo" class="p-1"><b>BLOGZO</b></h1>

<nav class="navbar navbar-expand-lg navbar-light navbar-laravel">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Back</a>
                </li>
                {{#if isLoggedIn}}
                <li class="nav-item">
                    <a class="nav-link" href="/blogposts/create">Create Post</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/toDoLists">Todo list</a>
                </li>
                <form action="logout" method="POST">
                     <input type="submit" value="logout">
                </form>  
                {{/if}}
            </ul>

        </div>
    </div>
</nav>

{{#if blogposts.length}}
<div class="container card mb-4 p-1">
    {{#each blogposts}}
    <img class="card-img-top" src="/blogpost-img/{{imageFile}}" alt="Card image cap">
    <div class="card-body">
        <h2 class="card-title">{{title}}</h2>
        <p class="card-text">
            {{content}}
        </p>
        <a href="/blogposts/{{blogId}}" class="btn btn-primary">Read more &rarr;</a>
    </div>
    <div class="card-footer text-muted">
        Posted on {{posted}}, by {{userId}} 
    </div>
    {{/each}}
</div>
{{/if}}



