
<nav class="navbar navbar-expand-lg navbar-dark bg-dark navbar-laravel">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <span class="navbar-brand" >BLOGZO</span>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Start</a>
                </li>
                {{#if isLoggedIn}}
                <li class="nav-item">
                    <a class="nav-link" href="/blogposts/create">Create blogpost</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/toDoLists">Todo list</a>
                </li>
                <form action="/logout" method="POST">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    
                    <input class="btn btn-link" type="submit" value="Logout">
                </form>  
                {{/if}}
            </ul>

        </div>
    </div>
</nav>

{{#if model.errors.length}}
    <p>{{this}}</p>
{{/if}}

{{#if model.blogposts.length}}
    {{#each model.blogposts}}
    <div class="container card mb-4 border">
    <img class="card-img-top" src="/blogpost-img/{{dataValues.imageFile}}" width="750" height="500" alt="Image not found">
    <div class="card-body">
        <h2 class="card-title">{{dataValues.title}}</h2>
        <p class="card-text">
            {{content}}
        </p>
        <a href="/blogposts/{{dataValues.blogId}}" class="btn btn-primary">Read more &rarr;</a>
    </div>
    <div class="card-footer text-muted">
        Posted on {{dataValues.posted}}, by {{dataValues.userId}} 
    </div>
    </div>
    {{/each}}
{{/if}}



