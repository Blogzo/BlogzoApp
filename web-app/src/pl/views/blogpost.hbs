{{#if errors}}
    <p>{{this}}</p>
{{/if}}

{{#if blogpost}}
    <div class="container card mb-4 border">
        <img class="card-img-top" src="/blogpost-img/{{blogpost.imageFile}}" width="750" height="600" alt="Image not found">
        <div class="card-body">
            <h2 class="card-title">{{blogpost.title}}</h2>
            <p class="card-text">
                {{blogpost.content}}
            </p>
        </div>
        <div class="card-footer text-muted">
            Posted on {{blogpost.posted}}
        </div>
    </div>
{{else}}
    <p>No blogpost with that id!</p>
{{/if}}