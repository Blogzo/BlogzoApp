{{#if model.errors}}
    <p>{{this}}</p>
{{/if}}

{{#if model.blogpost}}
    <h1 style="text-align: center;"><b>Blogpost</b></h1>
    <div class="container card mb-4 p-1">

        <img class="card-img-top" src="/blogpost-img/{{model.blogpost.dataValues.imageFile}}" alt="Card image cap">
        <div class="card-body">
            <h2 class="card-title">{{model.blogpost.dataValues.title}}</h2>
            <p class="card-text">                
                {{model.blogpost.dataValues.content}}
            </p>
        </div>
        <div class="card-footer text-muted">
            Posted on {{model.blogpost.dataValues.posted}}, by 
        </div>
    </div>
{{else}}
<p>No blogpost with that id!</p>
{{/if}}