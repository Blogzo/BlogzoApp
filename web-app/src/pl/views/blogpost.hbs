{{#if errors}}
    <p>{{this}}</p>
{{/if}}

{{#if blogpost}}
    <h1 style="text-align: center;"><b>Blogpost</b></h1>
    <div class="container card mb-4 p-1">
        <img class="card-img-top" src="/blogpost-img/{{imageFile}}" alt="Card image cap">
        <div class="card-body">
            <h2 class="card-title">{{title}}</h2>
            <p class="card-text">                
                {{content}}
            </p>
        </div>
        <div class="card-footer text-muted">
            Posted on {{posted}}, by {{username.account.username}}
        </div>
    </div>
{{else}}
    <p>No blogpost with that id!</p>
{{/if}}